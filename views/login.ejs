    <title>Login</title>
    <style>
        .login{
            width: 550px;
            background-color: rgba(255, 255, 255, 0.8); /* Semi-transparent white background */
            margin: 10% auto;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.2); /* Add a subtle box shadow for depth */
        }
        .login form{
            text-align: center;
        }
        .login h2{
            color: #e74c3c; /* Red text color */
            text-align: center;
        }
        form input{
            margin: 10px 0;
            padding: 10px;
            border-radius: 5px;
        }
        select {
            margin: 10px 0;
            padding: 10px;
            border-radius: 5px;
        }
        .login-img {
            text-align: center;
        }
        .login-img img {
            max-width: 100%;
            height: auto;
        }
        .login-button {
            text-align: center; /* Center-align the button */
        }
        input[type="submit"] {
            margin-top: 25px;
            padding: 10px 20px; /* Add padding to the submit button for better appearance */
            background-color: #2ecc71; /* Green submit button color */
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        input[type="submit"]:hover {
            background-color: #27ae60; /* Darker green on hover */
        }
    </style>
</head>
<body>
    <div class="login">
        <h2>Login page</h2>
        <div class="login-img">
            <img src="images/login-img.png" alt="Login Image" width="200">
        </div>
        <form action="/login" method="post">
            <label for="email">Email id:</label>
            <input type="text" id="email" name="email-id">
            <br>
            <label for="password">Password:</label>
            <input type="password" id="password" name="password">
            <br>
            <label for="user">Choose one:</label>
            <select id="user" name="user">
                <option value="admin">Admin</option>
                <option value="Teacher">Teacher</option>
                <option value="Student">Student</option>
            </select>
            <br>
            <div class="login-button"> <!-- Center-align the button -->
                <input type="submit" value="Login">
            </div>
        </form>
    </div>
</body>
</html>

